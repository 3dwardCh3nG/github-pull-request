{
  "name": "github-pull-request",
  "description": "Github Pull Request Action",
  "version": "0.0.0",
  "author": "Edward Cheng <edward@cheng.sydney>",
  "license": "MIT",
  "homepage": "https://github.com/3dwardCh3nG/github-pull-request",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3dwardCh3nG/github-pull-request.git"
  },
  "bugs": {
    "url": "https://github.com/3dwardCh3nG/github-pull-request/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bundle": "yarn format:write && yarn package",
    "ci-test": "jest --coverage --forceExit --detectOpenHandles",
    "format:write": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license LICENSE",
    "package:watch": "yarn package -- --watch",
    "test": "(jest --forceExit --detectOpenHandles && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "yarn format:write && yarn lint && yarn test && yarn package"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/io": "^1.1.3",
    "@actions/exec": "^1.1.1",
    "@octokit/core": "^4.2.4",
    "@types/uuid": "^9.0.3",
    "@octokit/plugin-paginate-rest": "^5.0.1",
    "@octokit/plugin-rest-endpoint-methods": "^6.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.48.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "jest": "^29.6.4",
    "js-yaml": "^4.1.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.0.3",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "semantic-release": "19.0.3",
    "conventional-changelog-eslint": "3.0.9"
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "develop",
        "prerelease": true
      }
    ],
    "tagFormat": "v${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint",
          "releaseRules": [
            {
              "tag": "Breaking",
              "release": "major"
            },
            {
              "tag": "Fix",
              "release": "patch"
            },
            {
              "tag": "Update",
              "release": "minor"
            },
            {
              "tag": "New",
              "release": "minor"
            },
            {
              "tag": "Docs",
              "release": "patch"
            },
            {
              "tag": "Build",
              "release": "patch"
            },
            {
              "tag": "Upgrade",
              "release": "minor"
            },
            {
              "tag": "Chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint",
          "parserOpts": {
            "noteKeywords": [
              "Breaking",
              "Fix",
              "Update",
              "New",
              "Docs",
              "Build",
              "Upgrade",
              "Chore"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          },
          "commit": "commits",
          "issue": "issues"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "dist/*.tgz",
          "successComment": false,
          "failComment": false,
          "failTitle": false,
          "labels": false
        }
      ]
    ]
  }
}
